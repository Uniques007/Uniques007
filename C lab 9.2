
int main(){

     int n, i,j;
    int matrica[100][100];
    int sum = 0;

    FILE * inputFile = fopen("input.txt", "r");
    FILE * outputFile = fopen("output.txt", "w");

    fscanf(inputFile, "%d\n", &n);

    for (i=0;i<n;i++) {
        for (j=0;j<n;j++) {
            fscanf(inputFile, "%d", &matrica[i][j]);
            if (i==j) {
                sum+=matrica[i][j];
            }
        }
    }

    for (i=0;i<n;i++) {
        for (j=0;j<n;j++) {
            if (j>i) {
                fprintf(outputFile, "%03d ", sum);

            }
            else
                fprintf(outputFile,"    ");
        }
        fprintf(outputFile, "\n");
    }
    return 0;
}
