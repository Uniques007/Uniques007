#include <iostream>
#include <string.h>
#include <math.h>
#include<stdio.h>
using namespace std;

class Shape{
 protected:
   int strana;
 public:
    Shape(){
    strana=0;
    }
    Shape(int s){
    strana=s;
}
virtual double plostina()=0;
 virtual void pecati()=0;
  virtual int getType()=0;
};
  class Square: public Shape{

  public:
      Square(int strana):Shape(strana){}


   double plostina(){

   return strana*strana;
   }
   void pecati(){
   cout<<"Kvadrat so plostina = "<<plostina()<<endl;
   }

   int getType(){
   return 1;
   }
  };


  class Circle:public Shape{
  public:

      Circle(int str):Shape(str){}



      double plostina(){
      return 3.14*strana*strana;
      }
      void pecati(){
   cout<<"Krug so plostina = "<<plostina()<<endl;
   }
   int getType(){
   return 2;
   }

  };
  class Triangle:public Shape{

  public:
      Triangle(int str):Shape(str){}


      double plostina(){
      return (sqrt(3)/4)*strana*strana;
      }
void pecati(){
   cout<<"Triagolnik so plostina = "<<plostina()<<endl;
   }

   int getType(){
   return 3;
   }

  };
  void checkNumTypes(Shape** niza, int n){
  int countkrug=0,counttriagolnik=0,countkvadrat=0;
  for(int i=0;i<n;i++){
    if(niza[i]->getType()==1){
        countkvadrat++;
    }
    if(niza[i]->getType()==2){
        countkrug++;
    }
    if(niza[i]->getType()==3){
        counttriagolnik++;
    }
  }
  cout<<"Broj na kvadrati vo nizata = "<<countkvadrat<<endl;
  cout<<"Broj na krugovi vo nizata = "<<countkrug<<endl;
   cout<<"Broj na triagolnici vo nizata = "<<counttriagolnik<<endl;
  }




int main(){


	int n,test,a;
	cin >> n;
    Shape **niza=new Shape*[n];
	for(int i=0;i<n;i++){
        cin>>test>>a;
        if(test==1){
            niza[i]=new Square(a);

        }
        if(test==2){
            niza[i]=new Circle(a);
        }
        if(test==3){
            niza[i]=new Triangle(a);
        }
	}






	for(int i = 0; i < n; ++i){

		niza[i]->pecati();
	}

	checkNumTypes(niza, n);
   delete [] niza;

	return 0;
}
